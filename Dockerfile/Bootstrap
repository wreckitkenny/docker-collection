FROM  ubuntu:20.04
SHELL [ "/bin/bash", "-c" ]

ARG DEBIAN_FRONTEND=noninteractive
ARG ANSIBLE_VERSION=9.0.0
ENV YQ_VERSION=v3.4.1

RUN set -eux; \
    apt-get update; \
    apt-get install -y --no-install-recommends \
        ca-certificates \
        gnupg \
        openssl \
        openssh-client bash-completion \
        curl \
        git \
        make \
        tar \
        zip \
        unzip \
        gzip \
        bzip2 \
        tree \
        vim \
        gettext-base \
        jq \
        netcat \
        iproute2 \
        net-tools \
        telnet \
        iputils-* \
        dnsutils \
        colordiff \
        python3 \
        python3-pip \
        python3-wheel \
        python-is-python3 \
        python3-setuptools; \
    # Install yq
    curl -sSL https://github.com/mikefarah/yq/releases/download/${YQ_VERSION#v}/yq_linux_amd64 -o /usr/bin/yq; \
    chmod +x  /usr/bin/yq; \
    yq shell-completion > /etc/bash_completion.d/yq; \
    
    # Config pip
    ln -s -f  /usr/bin/pip3 /usr/bin/pip;
    pip config set --global global.no-cache-dir True;
    pip completion --bash > /etc/bash_completion.d/pip;
    
    # Install Ansible
    pip install \
    	ansible \
        Jinja2  \
        toml    \
        PyYAML  \
        paramiko \
        argcomplete \
        apache-libcloud; \
    	activate-global-python-argcomplete;
    
    # Install Minio client
    curl -sSL "https://dl.min.io/client/mc/release/linux-amd64/mc" -o /usr/local/bin/mc;
    chmod +x /usr/local/bin/mc;
    mc --autocompletion;

    apt-get clean; \
    rm -rf /var/lib/apt/lists/*

COPY ./rootfs /

CMD [ "ansible-playbook", "--version" ]
